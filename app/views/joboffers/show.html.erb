<p>
  <strong>Title:</strong>
  <%= @joboffer.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @joboffer.description %>
</p>

<% (0...@joboffer.images.count).each do |image| %>
    <%= image_tag(@joboffer.thumbnail(image)) %>
<% end %>



<p>
  <strong>Photo:</strong>
  <%= @joboffer.photo %>
</p>

<p>
  <strong>Budget:</strong>
  <%= @joboffer.budget %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @joboffer.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @joboffer.end_date %>
</p>

<p>
  <strong>Location:</strong>
  <%= @joboffer.location_id %>
</p>

<p>
  <strong>Skill:</strong>
  <%= @joboffer.skill_id %>
</p>

<p>
  <strong>User:</strong>
  <%= @joboffer.user.name %>
  <%= @joboffer.user.last_name %>
</p>

<%= link_to 'Edit', edit_joboffer_path(@joboffer) %> |
<%= link_to 'Back', joboffers_path %>

<%= link_to 'Cerrar trato', joboffer_agreements_path(@joboffer), class: 'btn btn-success', method: :post %>

<div class="container-fluid">
  <div class="jumbotron">
<h1 class="text-center">Comentarios</h1>
</div>



<p id="notice"><%= notice %></p>
  
<div class="container-fluid">
<div class="row">

<div class="col-sm-5 col-md-9">
  <div class="table table-striped table-bordered">
     <table class="table">
    <thead>
      <tr>
        <th scope="col">User</th>
        <th scope="col">Content</th>
        <th scope="col">Price</th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr class="border border-dark">
          <td><%= comment.user_id %></td>
          <td><%= comment.content %></td>
          <td><%= comment.price %></td>
          <td><%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', comment, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>



  <div class="col-md-3 border border-info">
    <div class="sticky-top pagination justify-content-center" style="margin-top: 50px">
    <%= form_with(model: @comment, local: true) do |form| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h6 class="text-center">Nuevo Comentario</h6>
  <div class="field">
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
    <%= current_user.name %>
    <%= current_user.last_name %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :joboffer_id %>
    <%= form.number_field :joboffer_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
  </div>
  </div>
</div>
</div>


</div>

